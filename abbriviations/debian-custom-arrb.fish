# Advanced Package Tools
abbr -a aud     'sudo apt update'
abbr -a aug     'sudo apt upgrade -y'
abbr -a auf     'sudo apt update && sudo apt-get upgrade -y'
abbr -a ait     'sudo apt install -y'
abbr -a acl     'sudo apt autoremove && sudo apt autoclean'
abbr -a arm     'sudo apt remove --purge'
abbr -a asr     'apt-cache search'

