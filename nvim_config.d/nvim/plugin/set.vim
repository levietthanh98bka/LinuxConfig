" GUI
set guicursor=
set termguicolors
set noerrorbells

" Tab size
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set textwidth=180

" Behaviors
set number
set relativenumber
set smartindent
set scrolloff=8
set completeopt=menuone,noinsert

" Disable backup
set nowritebackup
set noswapfile
set nobackup

" Search support
set hlsearch
set incsearch
set ignorecase
set smartcase
